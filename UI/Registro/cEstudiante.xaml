<Window x:Class="trabajo_3.UI.Registro.cEstudiante"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:trabajo_3.UI.Registro"
        mc:Ignorable="d"
        Title="Registro del estudiante" Height="720" Width="630">

    <Grid Height="778" VerticalAlignment="Top" Margin="0,0,10,0">

        <Label Content="ESTUDIANTE-ID" HorizontalAlignment="Left" Margin="10,56,0,0" VerticalAlignment="Top" Width="142" Height="43"/>
        <TextBox x:Name="estudiantes" HorizontalAlignment="Left" Margin="110,58,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="190" Height="24"/>

        <Label Content="EMAIL" HorizontalAlignment="Left" Margin="10,208,0,0" VerticalAlignment="Top" Width="86" Height="46"/>
        <TextBox  x:Name="email" HorizontalAlignment="Left" Margin="56,210,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="300" Height="26" Text=""/>
    
        <DataGrid x:Name="consulta" HorizontalAlignment="Left" Height="228" Margin="40,450,0,0" VerticalAlignment="Top" Width="500" d:ItemsSource="{d:SampleData ItemCount=5}"/>
        <Label Content="NOMBRE" HorizontalAlignment="Left" Margin="10,128,0,0" VerticalAlignment="Top" Width="259"/>
        <TextBox x:Name="Nombre" HorizontalAlignment="Left" Height="26" Margin="77,130,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="213"/>

        <CheckBox Content="Activo" HorizontalAlignment="Left" Margin="310,57,0,0" VerticalAlignment="Top"/>
        <Label Content="CARRERA-ID" HorizontalAlignment="Left" Width="162" Height="49" Margin="10,290,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="Carreraid" Margin="95,290,448,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="24"/>

        <Button  x:Name="guardar" Content="💾Guardar" HorizontalAlignment="Left" Margin="100,360,0,0" VerticalAlignment="Top" Click="guardar_Click" Width="102" Height="46"/>
        <Button  x:Name="eliminar" Content="❌Eliminar" HorizontalAlignment="Left" Margin="407,360,0,0" VerticalAlignment="Top" Click="eliminar_Click" Width="102" Height="46"/>
        <Button  x:Name="editar" Content="✔Editar" HorizontalAlignment="Left" Margin="262,360,0,0" VerticalAlignment="Top" Click="editar_Click" Width="102" Height="46"/>

    </Grid>

</Window>
